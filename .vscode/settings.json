{
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.snippet": [
        "css",
        "scss",
        "less",
        "postcss",
        "javascript"
    ],
    "stylelint.validate": [
        "css",
        "scss",
        "less",
        "postcss",
        "javascript"
